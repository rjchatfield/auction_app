<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>
<p>
  <strong>Vendor:</strong>
  <%= @item.vendor %>
</p>
<p>
  <strong>Starting Price:</strong>
  <%= number_to_currency(@item.starting_price) %>
</p>
