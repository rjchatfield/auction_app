<% @admin = true %>
<% @page_title = @category.name %>

<table class="item_detail">
  <tbody>
    <tr class="field">
      <td class="detail_label">Description</td>
      <td class="detail_value"><%= @category.description %></td>
    </tr>
  </tbody>
</table>

<div class="container_nav">
  <%= link_to 'See All Categories', categories_path, class: "bordered_link" %>
  <%= link_to 'Edit', edit_category_path(@category), class: "bordered_link" %>
  <%= link_to 'Delete', @category, method: :delete, data: { confirm: "Are you sure you want to delete the category \"#{@category.name}\"?" }, class: "bordered_link" %>
</div>
