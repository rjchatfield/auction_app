<% @page_title = "#{@user.first_name} #{@user.last_name}" %>

<h2><%= @page_title %></h2>

<%= content_tag(:p, notice, id: "notice") unless notice.nil? %>

<h3><%= "#{@user.first_name} is selling:" %></h3>
<%# content_tag(:h3, "No items found", class: "no_items_message") if @users.count==0 %>

<div class="container_nav">
  <%= link_to 'See All Accounts', users_path, class: "bordered_link" %>
  <%= link_to 'Edit Account',   { action: :edit,    id: @user.id }, class: "bordered_link" %>
  <%= link_to 'Delete Account', { action: :destroy, id: @user.id }, method: :delete, data: { confirm: "Are you sure you want to delete the item \"#{@user.first_name}\"?" }, class: "bordered_link" %>
</div>
