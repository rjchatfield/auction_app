$white:#FFFFFF;
$antiflash:#F5F4F2;
$zorba:#9F9389;
$scorpian:#6A6765;

/* CSS FILE FOR AUCTION APP */
*, *:before, *:after {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
body {
  margin: 0 auto;
  padding: 0 10px;
  max-width: 746px;
  font-family: "Raleway", Arial, Helvetica, FreeSans, "Liberation Sans", "Nimbus Sans L", sans-serif;
  background: $antiflash;
  color: $zorba;
}
/* HEADER */
#accountbar {
    text-align: right;
    padding-top: 1em;
}
header {
  h1 {
    font-size: 3em;
    text-align: center;
    a {
      color: $zorba;
    }
  }
  h2 {
    margin-bottom:   0;
    padding-top:    16px;
    padding-bottom: 16px;
    text-align:   center;
    color:        $white;
    background:   $zorba;
  }
  .alert {
    padding:        1em;
    text-align:  center;
    background:   white;
  }
}
nav {
  float: left;
  display: inline-block;
  width: 130px;
  margin-top: 0;
  margin-bottom: 4px;
  padding: 0.5em 1em;
  text-align: right;

  a {
    display: block;
    margin: 0.5em 0em;
  }
  a:after {
    content: "  <";
  }
  .separator {
    margin: 1em 0em;
  }
}
/* MAIN */
.container {
  margin-left: 150px;
  padding: 14px 0;
  #error_explanation,
  .search_form {
    background:   white;
    padding:        1em;
    margin-left:  -10px;
    margin-bottom:  1em;
  }
  #error_explanation {
    margin-bottom: 1em;
  }
  #item_list {
    .item_wrap {
      position: relative;
      margin-bottom: 2em;

      .bullet {
        position: absolute;
        width: 50px;
        height: 50px;
        top: 2px;
        background: $white;
        border-radius: 30%;
      }
      p {
        margin-left: 60px;
      }
      .item_name {
        font-size: 2em;
      }
    }
  }
  table.item_detail {
    width: 100%;

    .detail_label {
      text-align: right;
      padding-right: 1em;
    }
    td {
      padding-bottom: 1em;
    }
    .detail_input,
    .detail_value {
      width: 75%;

      input[type="text"],
      input[type="number"],
      textarea {
        width: 100%;
      }
    }
  }
  .container_nav {
    margin-top: 1em;
    text-align: right;
  }
}
/* FOOTER */
footer {
  clear: left;
  margin-top: 20px;
  padding: 20px 0;
  font-size: 0.8em;
  text-align: center;
  color: $zorba;
  border-top: solid 1px $zorba;
}
/* GENERAL */
input,
textarea,
select {
  font: inherit;
  color: $scorpian;
  background: inherit;
}
a {
  color: $scorpian;
}
a:link {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
input[type="submit"],
a.bordered_link {
  padding: 0 4px;
  border: solid 1px;
  border-radius: 3px;
  border-color: $scorpian;
  text-decoration: none;
  cursor: pointer;
}
input[type="submit"]:hover,
a.bordered_link:hover {
  background: $zorba;
  color: $white;
}

<% if Rails.env.development? %>
.debug_dump {
  opacity: 0;
  margin: 1em;
  padding: 1em;
  border: ridge 6px green;
  color: green;
}
.debug_dump:hover {
  opacity: 1;
}
<% end %>

@media only screen and (max-device-width: 480px)  {
  body {
    -webkit-text-size-adjust: none;
    -moz-text-size-adjust: none;
    text-size-adjust: none;
  }
  nav {
    display: block;
    float: none;
    width: default;
  }
  .container {
    margin-left: 10px;
  }
}
