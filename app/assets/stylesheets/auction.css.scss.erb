$featureColour:#FF0000;

/* CSS FILE FOR AUCTION APP */
body {
  font-family: helvetica, arial, sans-serif;
  margin: 0 auto;
  padding: 0 10px;
  background: white;
  color: white;
  max-width: 746px;
}
/* HEADER */
header {
  border-bottom: solid 1px $featureColour;
}
header h1 {
  text-align: center;
}
header h1 a {
  color: $featureColour;
}
nav {
  float: left;
  display: inline-block;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  width: 130px;
  margin-top: 0px;
  padding: 0.5em 1em;
  background: $featureColour;
}
nav a {
  display: block;
  margin: 0.5em 0em;
  color: white;
}
/* MAIN */
.container {
  margin-top: 0px;
  margin-left: 150px;
  padding: 0.5em 1em;
  background: white;
  color: black;
}
.container :first-child {
  margin-top: 5px;
}
.container h2 {
  padding-bottom: 0.5em;
  border-bottom: solid 1px $featureColour;
}
/* FOOTER */
footer {
  font-size: 0.8em;
  text-align: center;
  color: $featureColour;
  border-top: solid 1px $featureColour;
}
/* GENERAL */
a:link {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

<% if Rails.env.development? %>
.debug_dump {
  box-sizing: border-box;
  margin: 1em;
  padding: 1em;
  border: ridge 6px green;
  color: green;
}
<% end %>
